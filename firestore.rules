rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function hasAuth() { return request.auth != null; }

    // Vérifie qu'un doc membership existe sous forme {id: uid_tenantId}
    function isMemberOfTenant(tenantId) {
      return hasAuth() && exists(
        /databases/$(database)/documents/memberships/$(request.auth.uid + '_' + tenantId)
      );
    }

    function isAdminOfTenant(tenantId) {
      return hasAuth() &&
        exists(/databases/$(database)/documents/memberships/$(request.auth.uid + '_' + tenantId)) &&
        get(/databases/$(database)/documents/memberships/$(request.auth.uid + '_' + tenantId)).data.role == 'admin';
    }

    // Helper to read the tenantId from the resource (for read/update/delete)
    function resourceTenantId() {
      return resource.data.tenantId;
    }
    // Helper to read the tenantId from the incoming write (for create/update)
    function requestTenantId() {
      return request.resource.data.tenantId;
    }

    // Produits
    match /products/{docId} {
      // Lire uniquement si membre du tenant du document
      allow get, list: if hasAuth() && isMemberOfTenant(resourceTenantId());
      // Créer: membre du tenant et cohérence tenantId
      allow create: if hasAuth() && isMemberOfTenant(requestTenantId());
      // Mettre à jour: membre du tenant et tenantId inchangé
      allow update: if hasAuth() && isMemberOfTenant(resourceTenantId()) &&
        requestTenantId() == resourceTenantId();
      // Supprimer: membre du tenant
      allow delete: if hasAuth() && isMemberOfTenant(resourceTenantId());
    }

    // Utilisateurs (collection applicative, pas Firebase Auth)
    match /users/{docId} {
      allow get, list: if hasAuth() && isMemberOfTenant(resourceTenantId());
      allow create: if hasAuth() && isAdminOfTenant(requestTenantId());
      allow update: if hasAuth() && isAdminOfTenant(resourceTenantId()) &&
        requestTenantId() == resourceTenantId();
      allow delete: if hasAuth() && isAdminOfTenant(resourceTenantId());
    }

    // Opérations (journal)
    match /operations/{docId} {
      allow get, list: if hasAuth() && isMemberOfTenant(resourceTenantId());
      allow create: if hasAuth() && isMemberOfTenant(requestTenantId());
      allow update, delete: if false; // immutables
    }

    // Journal d'activité (tenant portal)
    match /tenant_audit/{docId} {
      allow get, list: if hasAuth() && isMemberOfTenant(resourceTenantId());
      allow create: if hasAuth() && isAdminOfTenant(requestTenantId());
      allow update, delete: if false; // immutables
    }

    // Tenants metadata
    match /tenants/{tenantId} {
      allow read: if hasAuth() && isMemberOfTenant(tenantId);
      allow write: if false; // à restreindre (admin back-office)
    }

    // Memberships: lecture limitée à soi ou à l'admin outillé
    match /memberships/{docId} {
      allow read: if hasAuth() && docId.matches('^' + request.auth.uid + '_.*$');
      allow write: if false; // géré côté scripts / back-office uniquement
    }
  }
}